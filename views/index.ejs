<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="http://fonts.googleapis.com/css?family=Source+Code+Pro:300,400,500,600" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" type="text/css">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="doc">
      <div class="api">API Documentation</div>
      <span class="api_description">Base path : /api</span>
      <% apis.forEach(function(api) { %>
        <div class="api_elt">
          <div class="api">/<%= api.name %></div>
          <span class="api_description"><%= api.description %></span>
          <% api.methods.forEach(function(method) { %>
            <div class="method">
              <div class="method_header"><div class="path"><span class="type"><%= method.type %></span>/<%= method.name %></div></div>
              <div class="method_body">
                <span class="method_title">Description</span>
                <div class="method_description"><%= method.name %></div>
              </div>
            </div>
          <% }) %>
        </div>
      <% }) %>
    </div>
  </body>
</html>
